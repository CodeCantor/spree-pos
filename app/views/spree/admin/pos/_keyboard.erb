<div>
  <script>
    $(function(){
      $('#given').on('keyup',function(){
        value = $(this).val();
        total = <%= @order.total %>;
        $('#return-money').html(value - total)
      })

      $('.keyboard button').on('click',function(){
        given = $('#given')
        given.val(given.val() + $(this).attr('data-number'))
        given.trigger('keyup')
      })
      $('#delete').on('click',function(){
        $('#given').val()
      })
    });
  </script>
  <div class="col-md-6">
    <p>
      <input id="given" type="number" class="form-control">
    </p>
    <div class="keyboard">
      <p>
        <% 10.times.each do |i| %>
          <button data-number="<%= i %>">
            <%= i %>
          </button>
        <% end %>
        <button id="delete">BORRAR</button>
      </p>
    </div>
    <div id="return-money">
    </div>
  </div>
</div>